import com.fasterxml.jackson.core.JsonGenerator;
import com.fasterxml.jackson.databind.JsonSerializer;
import com.fasterxml.jackson.databind.SerializerProvider;

import java.io.IOException;

public class NullCharSerializer extends JsonSerializer<Character> {
    private static final char REPLACEMENT = ' ';

    @Override
    public void serialize(Character value, JsonGenerator gen, SerializerProvider serializers) throws IOException {
        if (value == null || value == '\u0000') {
            gen.writeString(String.valueOf(REPLACEMENT));
        } else {
            gen.writeString(String.valueOf(value));
        }
    }
}
